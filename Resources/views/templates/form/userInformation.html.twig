<div class="form-group">
    <label for="birthDate" class="required col-md-2 control-label">{{ 'user_information_form_birth_date'|trans({}, 'icap_portfolio') }}</label>
    <div class="col-md-10">
        <div class="input-group date" data-b-datepicker="{{ 'datepicker_date_format'|trans({}, 'icap_portfolio') }}" data-single-date="true">
            <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
            <input type="text" data-datetime="{{ 'date_field_format'|trans({}, 'icap_portfolio') }}"
                   data-datetime-model="yyyy/MM/dd"
                   class="input-sm form-control" name="userInformation[birthDate]"
                   data-ng-model="widget.birthDate"/>
        </div>
    </div>
</div>
<div class="form-group no-margin">
    <label for="city" class="required col-md-2 control-label">{{ 'user_information_form_city'|trans({}, 'icap_portfolio') }}</label>
    <div class="col-md-10">
        <input type="text" class="form-control" id="city" name="userInformationbirthDate[city]" data-ng-model="widget.city" />
    </div>
</div>
<div class="form-group no-margin">
    <div class="col-md-offset-2 col-md-10">
        <div class="checkbox">
            <label>
                <input type="checkbox" name="userInformationbirthDate[show_avatar]" value="1" data-ng-model="widget.show_avatar"> {{ 'user_information_form_show_avatar'|trans({}, 'icap_portfolio') }}
            </label>
        </div>
    </div>
</div>
<div class="form-group no-margin">
    <div class="col-md-offset-2 col-md-10">
        <div class="checkbox">
            <label>
                <input type="checkbox" name="userInformationbirthDate[show_mail]" value="1" data-ng-model="widget.show_mail"> {{ 'user_information_form_show_mail'|trans({}, 'icap_portfolio') }}
            </label>
        </div>
    </div>
</div>
<div class="form-group no-margin">
    <div class="col-md-offset-2 col-md-10">
        <div class="checkbox">
            <label>
                <input type="checkbox" name="userInformationbirthDate[show_phone]" value="1" data-ng-model="widget.show_phone"> {{ 'user_information_form_show_phone'|trans({}, 'icap_portfolio') }}
            </label>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <div class="checkbox">
            <label>
                <input type="checkbox" name="userInformationbirthDate[show_description]" value="1" data-ng-model="widget.show_description"> {{ 'user_information_form_show_description'|trans({}, 'icap_portfolio') }}
            </label>
        </div>
    </div>
</div>
<div class="form-group">
    <label for="text" class="col-md-2 control-label">{{ 'user_information_form_text'|trans({}, 'icap_portfolio') }}</label>
    <div class="col-md-10">
        <textarea data-ui-tinymce="tinyMceConfig" class="form-control" id="text" rows="3" name="userInformationbirthDate[text]" data-ng-model="widget.text"></textarea>
    </div>
</div>