{% extends 'IcapPortfolioBundle::layout.html.twig' %}

{% block content_body %}

    <div class="portfolio-tabpanel" role="tabpanel">
        <ul class="nav nav-tabs" role="tablist">
            <li class="presentation-options active">
                <a href="#presentation" aria-controls="presentation" role="tab" data-toggle="tab">
                    <span class="icon-bg"></span>
                    <span class="option-text">
                        <i class="fa fa-home"></i>
                        <span class="visible-md-inline visible-lg-inline">{{ 'presentation'|trans({}, 'icap_portfolio') }}</span>
                    </span>
                </a>
            </li>
            <li class="list-options">
                <a href="#list" aria-controls="list" role="tab" data-toggle="tab">
                    <span class="icon-bg"></span>
                    <span class="option-text">
                        <i class="fa fa-list"></i>
                        <span class="visible-md-inline visible-lg-inline">{{ 'my_owned_portfolio'|trans({}, 'icap_portfolio') }}</span>
                    </span>
                </a>
            </li>
            <li class="guided-options">
                <a href="#guided" aria-controls="guided" role="tab" data-toggle="tab">
                    <span class="icon-bg"></span>
                    <span class="option-text">
                        <i class="fa fa-list-alt"></i>
                        <span class="visible-md-inline visible-lg-inline">{{ 'guided_portfolio'|trans({}, 'icap_portfolio') }}</span>
                    </span>
                </a>
            </li>
            <li class="guide-options">
                <a href="#guide" aria-controls="guide" role="tab" data-toggle="tab">
                    <span class="icon-bg"></span>
                    <span class="option-text">
                        <i class="fa fa-comments-o"></i>
                        <span class="visible-md-inline visible-lg-inline">{{ 'exchange_space'|trans({}, 'icap_portfolio') }}</span>
                    </span>
                </a>
            </li>
        </ul>

        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="presentation">
                <p>
                    {{ 'presentation_message'|trans({}, 'icap_portfolio')|raw }}
                </p>
            </div>
            <div role="tabpanel" class="tab-pane" id="list">
                <div class="row">
                    <div class="col-md-12">
                        {% include 'IcapPortfolioBundle:Portfolio:list.html.twig' %}
                    </div>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="guided">
                {% include 'IcapPortfolioBundle:Portfolio:list_guided.html.twig' %}
            </div>
            <div role="tabpanel" class="tab-pane" id="guide">Espace d'Ã©change</div>
        </div>

    </div>
{% endblock %}