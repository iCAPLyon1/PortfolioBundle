{% extends "ClarolineCoreBundle::layout.html.twig" %}

{% block title %}{{ ('portfolio_error_' ~ errorCode)|trans({}, 'icap_portfolio') }}{% endblock %}

{% block content %}
    <div class="panel panel-default panel-user">
        <div class="panel-heading relative">
            <h3 class="panel-title">
                {{ ('portfolio_error_' ~ errorCode)|trans({}, 'icap_portfolio') }}
            </h3>
        </div>
        <div class="panel-body">
            <p>
                {{ ('portfolio_error_' ~ errorCode ~ '_text')|trans({'%loginUrl%': path('claro_security_login'), '%portfolioSlug%': portfolioSlug}, 'icap_portfolio') | raw }}.<br>
            </p>
        </div>
    </div>
{% endblock %}