{% extends 'ClarolineCoreBundle::layout.html.twig' %}

{% block title %}{{ portfolio.user.firstName ~ ' ' ~ portfolio.user.lastName ~ ' - ' ~ 'portfolio' | trans({}, 'icap_portfolio') ~ ' - ' ~ titleWidget.title | striptags | raw }}{% endblock %}

{% block content_container %}
    <div id="portfolio-section" data-portfolio-container="{{ portfolio.id }}">
        <div id="portfolio-container" data-ng-if="portfolio.$resolved">
            <header>
                <div class="container">
                    <h1 id="username">{{ portfolio.user.firstName ~ ' ' ~ portfolio.user.lastName }}</h1>

                    <div data-ng-repeat="widget in widgets | filter:{type: 'title'}" data-ng-show="widgets.length > 0">
                        <div data-widget>
                            <div class="portfolio-title-container">
                                {% if editMode %}
                                    <div class="widget-actions">
                                        <button class="widget-action btn" data-ng-click="edit(widget);" data-ng-if="!widget.isEditing()">
                                            <span class="icon-pencil"></span>
                                        </button>
                                    </div>
                                    <div data-ng-bind-html="widget.views.view | trustAsHtml"></div>
                                {% else %}
                                    {% include 'IcapPortfolioBundle:templates:title.html.twig' with {'widget': titleWidget} only %}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <section>
                {% if editMode %}
                <div class="col-md-2 widget-menu-container" role="buttonmenu">
                    <div class="btn-group-vertical widget_menu" role="buttongroup">
                        <button type="button" class="btn btn-default" data-ng-repeat="widgetType in widgetTypes" data-ng-click="createWidget(widgetType)">
                            <span class="icon-plus"></span>
                            {% verbatim %}{{ widgetType + '_title' | trans }}{% endverbatim %}
                        </button>
                    </div>
                </div>
                {% endif %}
                <div class="main-content col-md-8{% if false == editMode %} col-md-offset-2{% endif %}">
                {% if editMode %}
                    <div data-ng-repeat="widget in widgets | filter:{type: '!title'}">
                        <div data-widget class="panel panel-default">
                            <div class="panel-heading">
                                {% verbatim %}{{ widget.type + '_title'|trans }}{% endverbatim %}
                                {% if editMode %}
                                    <div class="widget-actions">
                                        <button class="widget-action btn btn-sm btn-danger" data-ng-class="{'btn-loading': widget.isDeleting}" data-confirm-click="delete(widget);" data-ng-if="isDeletable(widget) && !widget.isNew()">
                                            <span class="loading" data-ng-if="widget.isDeleting"></span><span class="icon-trash" data-ng-if="!widget.isDeleting"></span>
                                        </button>
                                        <button class="widget-action btn btn-sm btn-default" data-ng-click="edit(widget);" data-ng-if="!widget.isEditing() && !widget.isNew()">
                                            <span class="icon-pencil"></span></button>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="panel-body">
                                {% if editMode %}
                                    <div data-ng-bind-html="widget.views.view | trustAsHtml"></div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="no-data" data-ng-show="widgets.length <= 1">
                        <p class="well">{{ 'no_widget'|trans({}, 'icap_portfolio')|raw }}</p>
                    </div>
                {% else %}
                    {% for widget in portfolio.widgets %}
                        {% if 'title' != widget.widgetType %}
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    {{ (widget.widgetType ~ '_title') | trans({}, 'icap_portfolio') }}
                                </div>
                                <div class="panel-body">
                                    {% include 'IcapPortfolioBundle:templates:' ~ widget.widgetType ~ '.html.twig' with {'widget': widget} only %}
                                </div>
                            </div>
                        {% endif %}
                    {% else %}
                        no widget
                    {% endfor %}
                {% endif %}
                </div>
            </section>
        </div>

        {% if editMode %}
            <div data-ng-show="!portfolio.$resolved" id="portfolio-loading"></div>
        {% endif %}
    </div>
    {% if editMode %}
        <div class="form-container" data-ng-controller="editWidgetsController">
            <form name="form" class="edit-container" data-loading-form="save(editedWidget)" data-ng-repeat="editedWidget in editedWidgets">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            <span data-ng-bind="editedWidget.getType() + '_form_title'|trans"></span>
                            <button type="button" class="close" aria-hidden="true" data-ng-click="cancel(editedWidget);">&times;</button>
                        </h3>
                    </div>
                    <div class="panel-body panel-loading" data-ng-show="!editedWidget.views.form"></div>
                    <div class="panel-body" data-ng-show="editedWidget.views.form" data-bind-html="editedWidget.views.form"></div>
                    <div class="panel-footer">
                        <button type="submit" class="btn btn-primary">{{ 'save'|trans({}, 'platform') }}</button>
                        <button class="btn btn-default" data-ng-click="cancel(editedWidget)">{{ 'cancel'|trans({}, 'platform') }}</button>
                    </div>
                </div>
            </form>
        </div>
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets debug=false filter='lessphp, cssmin'  output='bundles/icapportfolio/css/portfolio_view.css'
      "@IcapPortfolioBundle/Resources/views/less/portfolio.less"
      "@IcapPortfolioBundle/Resources/views/less/interface.less"
    %}
        <link rel="stylesheet" href="{{ asset_url }}" screen="media" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% if editMode %}
        <script type="text/javascript" src="{{ asset('bundles/stfalcontinymce/vendor/tinymce/tinymce.jquery.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/stfalcontinymce/vendor/tinymce/jquery.tinymce.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/clarolinecore/js/tinymce/tinymce.js') }}"></script>
        <script type='text/javascript' src='{{ asset('bundles/frontend/jquery/plugin/confirm-bootstrap/confirm-bootstrap.js') }}'></script>

        {# Angular #}
        {% javascripts debug=true filter='jsmin' output='js/portfolio/angular.js'
            '@IcapPortfolioBundle/Resources/public/js/vendor/angular.min.js'
            '@IcapPortfolioBundle/Resources/public/js/vendor/angular-resource.min.js'
            '@IcapPortfolioBundle/Resources/public/js/vendor/angular-sanitize.min.js'
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}

        <script type="text/javascript" src="{{ asset('bundles/icapportfolio/js/vendor/angular-ui/ui-tinymce/tinymce.js') }}"></script>

        <script type="text/javascript" src="{{ url('bazinga_exposetranslation_js', { 'domain_name': 'icap_portfolio' }) }}"></script>

        <script type="text/javascript" src="{{ asset('bundles/icapportfolio/js/utils/Array.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/icapportfolio/js/app.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/icapportfolio/js/controllers/portfolioController.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/icapportfolio/js/controllers/widgetController.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/icapportfolio/js/controllers/editWidgetsController.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/icapportfolio/js/services/portfolio.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/icapportfolio/js/services/portfolioManager.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/icapportfolio/js/services/widgetsManager.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/icapportfolio/js/services/widgetsConfig.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/icapportfolio/js/services/widgetsFactory.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/icapportfolio/js/services/urlInterpolator.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/icapportfolio/js/services/translation.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/icapportfolio/js/directives/widgetsDirective.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/icapportfolio/js/directives/portfolioDirective.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/icapportfolio/js/directives/bindHtmlDirective.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/icapportfolio/js/directives/loadingFormDirective.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/icapportfolio/js/directives/confirmClickDirective.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/icapportfolio/js/directives/collectionFormDirective.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/icapportfolio/js/filters/trustAsHtml.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/icapportfolio/js/filters/trans.js') }}"></script>
        <script type="text/javascript">
            'use strict';
            (function() {
                window.widgetsConfig = '{{ widgetsConfig|json_encode()|raw }}';
            })();
        </script>
    {% endif %}
{% endblock %}